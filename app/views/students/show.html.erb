<div>
    <h3>Student Informations</h3>
    <div class="row">
            <div class="col s4">
                <div class="card-panel">
                    <div class="card-title" style="font-size: 24px">
                        <%= @student.name %>
                    </div>
                    <span>
                        <%= @student.email %>
                    </span>
                    <% if current_user.id == @student.id %>
                     <div>
                        <%= link_to "Edit", edit_student_path(@student.id), class: "orange-text", style: "margin: 10px"  %>
                    </div>
                    <% end %>
                </div>
            </div>
    </div>
</div>